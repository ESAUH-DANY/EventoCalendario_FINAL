@model List<EventoCalendario.Models.Asistencia>

@if (Model.Count == 0 || !Model.Any(a => a.Estado == "Aceptada"))
{
    <div class="alert alert-info text-center" role="alert">
        <i class="bi bi-info-circle"></i> No hay asistencias confirmadas.
    </div>
}
else
{
    <div class="container mt-4">
        <h3 class="text-center text-primary"><i class="bi bi-calendar-check"></i> Asistencias Confirmadas</h3>
        <div class="row mt-3">
            @foreach (var asistencia in Model.Where(a => a.Estado == "Aceptada"))
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card border-success shadow-sm">
                        <div class="card-header bg-success text-white text-center fw-bold">
                            <i class="bi bi-check-circle"></i> Aceptada
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title text-dark">
                                <i class="bi bi-person"></i> @asistencia.Usuario?.Nombre
                            </h5>
                            <p class="card-text text-muted">
                                Asistirá a:
                            </p>
                            <h6 class="text-primary"><i class="bi bi-calendar-event"></i> @asistencia.Evento?.Nombre</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
