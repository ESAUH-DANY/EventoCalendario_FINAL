@model EventoCalendario.Models.Evento

@{
    ViewData["Title"] = "Detalles del Evento";
    var usuariosConfirmados = ViewData["UsuariosConfirmados"] as List<EventoCalendario.Models.Usuario>;
}

<h2 class="text-primary"><i class="bi bi-calendar-event"></i> Detalles del Evento</h2>

<div class="card shadow p-4 mt-3">
    <h4 class="text-secondary"><i class="bi bi-info-circle"></i> Información del Evento</h4>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>ID:</strong> @Model.Id</li>
        <li class="list-group-item"><strong>Nombre:</strong> @Model.Nombre</li>
        <li class="list-group-item"><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")</li>
        <li class="list-group-item"><strong>Ubicación:</strong> @Model.Ubicacion</li>
        <li class="list-group-item"><strong>Estado:</strong> @Model.Estado</li>
    </ul>
</div>

<!-- Lista de Asistentes Confirmados -->
<div class="card shadow p-4 mt-4">
    <h4 class="text-secondary"><i class="bi bi-person-check"></i> Asistentes Confirmados</h4>

    @if (usuariosConfirmados != null && usuariosConfirmados.Any())
    {
        <ul class="list-group list-group-flush">
            @foreach (var usuario in usuariosConfirmados)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-person"></i> @usuario.Nombre</span>
                    <span class="badge bg-success">Confirmado</span>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-info mt-3 text-center">
            <i class="bi bi-info-circle"></i> No hay asistentes confirmados.
        </div>
    }
</div>

<!-- Botones de Acción -->
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil"></i> Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
</div>
