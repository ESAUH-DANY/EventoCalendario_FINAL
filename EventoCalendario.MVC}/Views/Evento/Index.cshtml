@model IEnumerable<EventoCalendario.Models.Evento>

@{
    ViewData["Title"] = "Lista de Eventos";
}

<h2>Eventos</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Fecha</th>
            <th>Ubicación</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evento in Model)
        {
            <tr>
                <td>@evento.Id</td>
                <td>@evento.Nombre</td>
                <td>@evento.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@evento.Ubicacion</td>
                <td>@evento.Estado</td>
                <td>
                    <a asp-action="Details" asp-route-id="@evento.Id" class="btn btn-info">Ver</a>
                    <a asp-action="Edit" asp-route-id="@evento.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@evento.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Agregar Evento</a>
<a asp-controller="Calendario" asp-action="Index" class="btn btn-secondary">Regresar al Calendario</a>