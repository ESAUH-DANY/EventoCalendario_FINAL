@model EventoCalendario.Models.Evento

@{
    ViewData["Title"] = "Eliminar Evento";
}

<h2>¿Estás seguro de que deseas eliminar este evento?</h2>

<div>
    <h4>@Model.Nombre</h4>
    <p>@Model.Descripcion</p>
    <p><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")</p>
    <p><strong>Ubicación:</strong> @Model.Ubicacion</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
